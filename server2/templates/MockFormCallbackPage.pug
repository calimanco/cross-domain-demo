extends layout.pug

block head
  title MockForm Callback Page

block content
  p This is a callback page for MockForm, which is generated by server2.
  p#domain

block scripts
  script.
    document.domain = 'demo.com'
    document.getElementById('domain').innerText = `The domain is set to ${document.domain}.`
    window.parent.#{callbackFn}(#{callbackId}, `!{data}`)
